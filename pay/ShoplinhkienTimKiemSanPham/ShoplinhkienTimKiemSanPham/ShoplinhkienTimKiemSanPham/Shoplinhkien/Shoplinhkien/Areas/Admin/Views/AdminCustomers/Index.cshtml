@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Shoplinhkien.Models.Customer>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <h5 class="card-header">Danh sách khách hàng : page @CurrentPage</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <a class="btn btn-primary" asp-controller="AdminCustomers" asp-action="Create">Add Account</a>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Họ và tên</th>
                    <th>Điện thoại</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Tỉnh thành</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="table-default">
                            <td><i class="fab fa-sketch fa-lg text-warning me-3"></i> @item.CustomerId</td>

                            <td>@item.FullName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>

                            <td>@item.Address</td>
                            <td>@item.LocationId</td>
                            <td>
                                <div>
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@item.CustomerId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Details" asp-route-id="@item.CustomerId"><i class="bx bxs-message-detail"></i> Details</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Delete" asp-route-id="@item.CustomerId"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>

                            </td>

                            @* <td><span class="badge bg-label-primary me-1">Active</span></td>
                    <td>
                    <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                    <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                    </div>
                    </div>
                    </td>*@
                        </tr>
                    }
                }


            </tbody>
            <!-- Basic Pagination -->
            <!--/ Basic Pagination -->
        </table>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <pager class="page-item" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index" />
                </ul>
            </nav>
        </div>


    </div>
</div>