@model Shoplinhkien.Models.Category

@{
    ViewData["Title"] = "Tạo mới danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="breadcrumb-item">Tạo mới danh mục sản phẩm</a>
            <span class="breadcrumb-item active">Sửa danh mục: @Model.CatName</span>
        </nav>
    </div>
</div>
<div class="card">



    <form asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@Model.CatId" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CatId" />
        <input type="hidden" asp-for="Thumb" />
        <div class="card-body" style="position:absolute; right:0; ">

            @*<div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
            <button class="btn btn-primary">
            <i class="anticon anticon-save"></i>
            <span>Save</span>
            </button>
            </div>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Lưu danh mục" class="btn btn-primary" />
            </div>
        </div>
        <div class="row">


            <div class="col-xl-10" style="margin-top:90px">


                <div class="nav-align-top mb-6">
                    <ul class="nav nav-tabs nav-fill" role="tablist">
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link active"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#navs-justified-home"
                                    aria-controls="navs-justified-home"
                                    aria-selected="true">
                                <i class="tf-icons bx bx-home"></i> THÔNG TIN PAGE
                                <span class="badge rounded-pill badge-center h-px-20 w-px-20 bg-label-danger">3</span>
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#navs-justified-profile"
                                    aria-controls="navs-justified-profile"
                                    aria-selected="false">
                                <i class="tf-icons bx bx-user"></i> THÔNG TIN SEO
                            </button>
                        </li>
                        <li class="nav-item">
                            <button type="button"
                                    class="nav-link"
                                    role="tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#navs-justified-messages"
                                    aria-controls="navs-justified-messages"
                                    aria-selected="false">
                                <i class="tf-icons bx bx-message-square"></i> MÔ TẢ
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="navs-justified-home" role="tabpanel">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="productName">Tên danh mục</label>
                                        <input type="text" class="form-control" asp-for="CatName">
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="ShortDesc">Ordering</label>
                                        <input type="text" class="form-control" asp-for="Ordering">
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
                                        <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                                        <span asp-validation-for="Thumb" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="form-group d-flex align-items-center">
                                            <div class="checkbox">
                                                <input asp-for="Published" type="checkbox" />
                                                <label for="Published">Public</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="navs-justified-profile" role="tabpanel">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="productSize">Title</label>
                                        <input type="text" class="form-control" asp-for="Title">
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="productColors">MetaDesc</label>
                                        <input type="text" class="form-control" asp-for="MetaDesc">
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="productFit">MetaKey</label>
                                        <input type="text" class="form-control" asp-for="Metakey">
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="productFit">SchemaMarkup</label>
                                        <input type="text" class="form-control" asp-for="SchemaMarkup">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="navs-justified-messages" role="tabpanel">
                            <div class="card">
                                <div class="card-body">
                                    <textarea id="summernote" asp-for="Description"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
@section Scripts{


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote-bs4.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote-bs4.js"></script>


    <script>
        $('textarea#summernote').summernote({
            placeholder: '',
            tabsize: 2,
            height: 100,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'clear']],
                // ['font', ['bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear']],
                //['fontname', ['fontname']],
                // ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'hr']],
                //['view', ['fullscreen', 'codeview']],
                ['help', ['help']]
            ],
        });
    </script>
}

