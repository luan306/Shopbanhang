@model Shoplinhkien.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4>Account edit</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" />
            <div class="form-group">
                <label asp-for="Phone" class="control-label"><strong>Phone</strong></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"><strong>Email</strong></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"><strong>Password</strong></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salt" class="control-label"><strong>Salt</strong></label>
                <input asp-for="Salt" class="form-control" />
                <span asp-validation-for="Salt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="form-check-label" for="Active"><strong>Active</strong></label>
                <div class="form-check form-switch">
                    <input asp-for="Active" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"><strong>Full name</strong></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"><strong>Role ID</strong></label>
                <select asp-for="RoleId" asp-items="@ViewBag.RoleId" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastLogin" class="control-label"><strong>Last login</strong></label>
                <input asp-for="LastLogin" class="form-control" />
                <span asp-validation-for="LastLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"><strong>Create date</strong></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="card-body">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index"><button type="button" class="btn btn-primary">Back to list</button></a>
            </div>
        </form>
    </div>
</div>

